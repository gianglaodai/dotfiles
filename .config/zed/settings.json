// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "tab_bar": {
    "show": true
  },

  "vim_mode": true,
  "ui_font_size": 20,
  "buffer_font_size": 20,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "ui_font_family": "Neucha",
  "buffer_font_family": "ComicShannsMono Nerd Font",
  "autosave": "on_window_change",
  "formatter": "prettier",
  "always_treat_brackets_as_autoclosed": true,
  "enable_language_server": true,
  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "HTML": {
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Svelte": {
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "YAML": {
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "experimental.theme_overrides": {
    "background.appearance": "transparent",
    "background": "#09090B9B",
    "panel.background": "#00000000",
    "editor.background": "#00000000",
    "editor.active_line_number": "#ffffffcc",
    "editor.gutter.background": "#00000000",
    "editor.indent_guide": "#ffffff30",
    "editor.indent_guide_active": "#ffffff80",
    "editor.line_number": "#ffffff30",
    "editor.active_line.background": "#3f3f4640",
    "tab_bar.background": "#00000000",
    "terminal.background": "#00000000",
    "toolbar.background": "#00000000",
    "tab.inactive_background": "#00000000",
    "tab.active_background": "#3f3f4650",
    "border": "#00000000",
    "status_bar.background": "#00000000",
    "title_bar.background": "#00000000",
    "border.variant": "#ffffff10",
    "scrollbar.track.background": "#00000000",
    "scrollbar.track.border": "#00000000",
    "scrollbar.thumb.background": "#55555555",
    "scrollbar.thumb.border": "#00000000",
    // "elevated_surface.background": "#00000090",
    "surface.background": "#00000090"
  }
}
